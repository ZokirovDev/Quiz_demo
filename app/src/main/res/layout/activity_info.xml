<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/heavy_sky_blue"
    android:padding="16dp"
    tools:context=".InfoActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnToBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_to_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="Quiz info"
        android:textColor="@color/black_cow"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/btnToBack"
        app:layout_constraintStart_toEndOf="@id/btnToBack"
        app:layout_constraintTop_toTopOf="@id/btnToBack" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:paddingEnd="-16dp"
        android:rotation="-15"
        android:src="@drawable/img_screen_2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/iv_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnToBack" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:paddingStart="-16dp"
        android:rotation="15"
        android:src="@drawable/img_screen_2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintTop_toBottomOf="@id/btnToBack" />

    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_screen_1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnToBack" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/gilroy_medium"
        android:paddingHorizontal="16dp"
        android:textColor="@color/black_cow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_3" />

</androidx.constraintlayout.widget.ConstraintLayout>